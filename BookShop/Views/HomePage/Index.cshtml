@model IEnumerable<BookShop.Models.Book>
@{
    ViewData["Title"] = "HomePage";
}
<div class="container">
   <div class="row row-cols-1 row-cols-md-4 g-4">
      
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 style= width:10px d-flex flex-column">
                    <img src="@Url.Content(item.ImgUrl)" class="card-img-top" alt="Product Image" style="max-height: 350px; max-width:200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.BookName</h5>
                        <p class="card-text">
                            @* <strong></strong> @item.Description<br> *@
                            <strong>Category:</strong> @item.CategoryName <br />
                            <strong>Price:</strong> <b> ₹ @item.Price </b><br>
                           
                        </p>
                    </div>
                    <div class="card-footer mt-auto">
                        @Html.ActionLink("Book Details", "Details", new { id = item.BookId }, new { @class = "btn btn-primary  w-30" })
                      
                    </div>
                </div>
            </div>
        }
    </div>
</div>
